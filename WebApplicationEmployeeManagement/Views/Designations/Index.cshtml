@model IEnumerable<WebApplicationEmployeeManagement.Models.Designation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DesignationID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DesignationID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DesignationID })
                @Ajax.ActionLink("Employee List", "GetEmployeeList", new { id = item.DesignationID }, new AjaxOptions()
           {
               UpdateTargetId = "updatePanel"
           })
            </td>
        </tr>
    }

</table>

<div id="updatePanel">
    @*@Html.Partial("pv_EmployeeList")*@
</div>
